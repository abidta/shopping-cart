<section>
    <div class="container">
         <div>{{#if usersList}}
            <table class="table table-light mt-3">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">email</th>
                        <th scope="col">action</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each usersList}}
                      <td></td>

                        
                        <td>{{this.name}}</td>
                        <td >{{this.email}}</td>

                        

                        <td>
                            <a onclick="return confirm('Are you Sure?')" href="/#/{{this._id}}"><button
                                    class="btn btn-danger">Remove user</button></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>
    </div>
</section>
<script>
    document.getElementById("index").innerHTML=parseInt(document.getElementById("index").innerHTML)+1
</script>