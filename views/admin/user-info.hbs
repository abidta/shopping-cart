<section>
    <div class="container  text-center">
        {{#each userInfo}}
        <div class="row mt-2">
            <div class="col-12"><img src="/images/avatar/img_avatar_men.png" alt="avatar" style="width: 100px; height: 100px; border-radius: 50%;"></div>
        </div>
        <div class="row mt-3">
            <div class="col-12">Full Name: {{this.name}}</div>
        </div>
        <div class="row mt-3">
            <div class="col-12">Email: {{this.email}}</div>
        </div>
        {{/each}}
    </div>
</section>